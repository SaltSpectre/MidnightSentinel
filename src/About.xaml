<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="MidnightSentinel.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Midnight Sentinel"
        Width="520" Height="250"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Border Background="#FF1E1E1E" 
            CornerRadius="10" 
            BorderBrush="#FF404040" 
            BorderThickness="1"
            ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              Direction="270" 
                              ShadowDepth="5" 
                              Opacity="0.5" 
                              BlurRadius="10"/>
        </Border.Effect>

        <Grid Margin="20,20,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="LogoImage" 
                   Grid.Column="0" 
                   Margin="0,0,10,0" Width="200" Height="200"/>

            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center" Margin="20,0,0,0">
                
                <Image x:Name="NameImage" 
                   Margin="0,0,0,0" 
                   Width="Auto" 
                   Height="Auto" 
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left"/>

                <TextBlock x:Name="VersionText"
                           Text="Placeholder"
                           FontSize="12" 
                           FontStyle="Italic" 
                           Foreground="White" 
                           TextAlignment="Right" 
                           Margin="0,0,10,20"/>

                <TextBlock Text="Copyright Â© 2025 SaltSpectre" 
                           FontSize="11.5" 
                           Foreground="#FFAAAAAA" 
                           Margin="0,0,0,5"/>

                <TextBlock x:Name="GitHubLink" 
                           FontSize="11.5" 
                           Foreground="#FF0099FF" 
                           Margin="0,0,0,15"
                           Cursor="Hand"
                           FontStyle="Italic"
                           MouseLeftButtonUp="OnGitHubLinkClick">
                    <Run Text="https://github.com/SaltSpectre/MidnightSentinel"/>
                </TextBlock>

                <Button x:Name="CloseButton" 
                        Content="Close" 
                        FontSize="12" 
                        Foreground="White" 
                        Background="#FF0078D4" 
                        BorderThickness="0" 
                        Padding="50,5" 
                        Click="OnCloseClick"
                        HorizontalAlignment="Center">
                    <Button.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" 
                                                Background="{TemplateBinding Background}" 
                                                CornerRadius="5" 
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center" 
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.HoverColor}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>